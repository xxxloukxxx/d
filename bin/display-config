#!/bin/bash
choice=`echo -e "0: LEFT/RIGHT\n1: LEFT/(right)\n2: (left)/RIGHT" | dmenu | cut -d ':' -f 1`
 
# execute the choice in background
case "$choice" in
  0) xrandr --output DP1 --auto && xrandr --output HDMI1 --auto --rotation left --left-of DP1 & ;;
  1) xrandr --output DP1 --off && xrandr --output HDMI1 --auto --rotation left & ;;
  2) xrandr --output HDMI1 --off && xrandr --output DP1 --auto & ;;
  *) exit ;;
esac

